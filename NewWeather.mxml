	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
		s|ToggleButton
		{
			chrome-color: haloGreen;
		}
		
		s|ToggleButton:upAndSelected,
		s|ToggleButton:overAndSelected,
		s|ToggleButton:downAndSelected,
		s|ToggleButton:disableAndSelected
		{
			chrome-color: red;
		}
		
		s|Button
		{
			corner-radius: 8;
			chrome-color: black;
			color: white;
			focus-color: green;
		}
		
		s|Button:disabled
		{
			chrome-color: white;
			color: black;
		}
	</fx:Style>
	
